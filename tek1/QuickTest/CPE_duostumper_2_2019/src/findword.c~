int findword(char *word, int size, char *arg)
{
    int pos = 0;
    int pos2 = 0;
    int count = my_strlen(word);
    int i = 1;

    while (arg[pos] != word[pos2])
        pos++;
    pos2++;
    while (i != count) {
        if (word[pos2] == arg[pos--]) { arg[pos--] -= 32;
            pos2++;
            printf("ok1");
        }
        if (word[pos2] == arg[pos++]) { arg[pos++] -= 32; 
            pos2++;
            printf("ok2");
        }
        if (word[pos2] == arg[pos+size]) {
            pos += size;
            pos2++;
            printf("ok3");
        }
        i++;
    }
}
